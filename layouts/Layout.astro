---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;700&family=Source+Sans+Pro:wght@400;600&display=swap" rel="stylesheet">
  </head>
  <body class="bg-stone-50">
    <header class="bg-stone-900 text-white py-6">
      <nav class="container mx-auto px-4">
        <div class="flex justify-between items-center">
          <a href="/" class="text-2xl font-bold font-serif">Chronicles of History</a>
          <ul class="flex space-x-6">
            <li><a href="/" class="hover:text-stone-300">Home</a></li>
            <li><a href="/blog" class="hover:text-stone-300">Articles</a></li>
            <li><a href="/about" class="hover:text-stone-300">About</a></li>
          </ul>
        </div>
      </nav>
    </header>
    <slot />
    <footer class="bg-stone-900 text-white py-8 mt-12">
      <div class="container mx-auto px-4 text-center">
        <p>&copy; {new Date().getFullYear()} Chronicles of History. All rights reserved.</p>
      </div>
    </footer>
  </body>
</html>

<style>
  body {
    font-family: 'Source Sans Pro', sans-serif;
  }
  h1, h2, h3, h4, h5, h6 {
    font-family: 'Playfair Display', serif;
  }
</style>